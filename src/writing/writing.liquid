---
  layout: layouts/listings-page.liquid
  title: Writing
---
<section>
  <h1 class="page-heading">Writing</h1>

  <ul class="listings">
    {% assign articles = collections.writing | sortCollection %}

    {% for _article in articles" %}
      <li>
        {% assign _lazyLoad = forloop.first != true %}
        {% include 'partials/article-card.liquid', article: _article, lazyLoad: _lazyLoad %}
      </li>
    {% endfor %}
  </ul>
</section>
